<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3.0" type="component" method="upgrade">
    <name>AkeebaSubs</name>
    <creationDate>##DATE##</creationDate>
    <author>Nicholas K. Dionysopoulos</author>
    <authorEmail>nicholas@akeeba.com</authorEmail>
    <authorUrl>https://www.akeeba.com</authorUrl>
    <copyright>Copyright (c)2010-2019 Nicholas K. Dionysopoulos</copyright>
    <license>GNU GPL v3 or later</license>
    <version>##VERSION##</version>
    <description>Akeeba Subscriptions v.##VERSION##</description>

    <!-- Public front end files -->
    <files folder="frontend">
        <filename>akeebasubs.php</filename>
        <filename>router.php</filename>

        <folder>Controller</folder>
        <folder>Dispatcher</folder>
        <folder>elements</folder>
        <folder>Model</folder>
        <folder>Toolbar</folder>
        <!-- Not a typo. We need BOTH views and View folders, for different reasons. -->
        <folder>View</folder>
        <folder>views</folder>
    </files>

    <!-- Front end translation files -->
    <languages folder="language/frontend">
        <language tag="en-GB">en-GB/en-GB.com_akeebasubs.ini</language>
    </languages>

    <!-- Media files -->
    <media destination="com_akeebasubs" folder="media">
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>

    <!-- Administrator back-end section -->
    <administration>
        <!-- Administration menu -->
        <menu>COM_AKEEBASUBS</menu>
        <!-- Back-end files -->
        <files folder="backend">
            <filename>access.xml</filename>
            <filename>akeebasubs.php</filename>
            <filename>config.xml</filename>
            <filename>fof.xml</filename>
            <filename>version.php</filename>

            <folder>Controller</folder>
            <folder>Dispatcher</folder>
            <folder>Helper</folder>
            <folder>Model</folder>
            <folder>PluginAbstracts</folder>
            <folder>sql</folder>
            <folder>Toolbar</folder>
            <folder>View</folder>
            <folder>ViewTemplates</folder>
        </files>

        <!-- Back-end translation files -->
        <languages folder="language/backend">
            <language tag="en-GB">en-GB/en-GB.com_akeebasubs.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_akeebasubs.sys.ini</language>
        </languages>
    </administration>

    <!-- Installation script -->
    <scriptfile>script.com_akeebasubs.php</scriptfile>
</extension>
